<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abuguina.buguinasharedpreferences.MainActivity">

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="134dp"
        android:layout_alignBaseline="@+id/et_username"
        android:layout_alignBottom="@+id/et_username"
        android:layout_toLeftOf="@+id/et_username"
        android:layout_toStartOf="@+id/et_username" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="120dp"
        android:layout_above="@+id/et_username"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignStart="@+id/et_username"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="68dp"
        android:layout_above="@+id/btn_save"
        android:layout_alignRight="@+id/btn_display"
        android:layout_alignEnd="@+id/btn_display" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="82dp"
        android:layout_alignBottom="@+id/et_password"
        android:layout_toLeftOf="@+id/et_password"
        android:layout_toStartOf="@+id/et_password" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Save"
        android:text="SAVE INFO"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="182dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tv_display"
        android:layout_alignStart="@+id/tv_display" />

    <Button
        android:id="@+id/btn_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Display"
        android:text="DISPLAY"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="182dp"
        android:layout_below="@+id/et_username"
        android:layout_alignRight="@+id/tv_display"
        android:layout_alignEnd="@+id/tv_display" />

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="262dp"
        android:layout_height="39dp"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="287dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/btn_save"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
